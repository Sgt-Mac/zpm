import argparse
import os
import sys

from os import path
# TODO(LB): This is a hack to make imports work, and should be replaced
# with something proper
sys.path.insert(0, path.abspath(path.dirname(path.dirname(__file__))))
from zpm import zpm, commands


def set_up_arg_parser():
    parser = argparse.ArgumentParser(description='ZeroVM Package Manager')
    subparsers = parser.add_subparsers(description='available subcommands',
                                       metavar='COMMAND')

    new_parser = subparsers.add_parser(
        'new',
        help='Create a new ZeroVM application workspace',
    )
    new_parser.add_argument(
        'dir',
        help='Non-existent or empty directory',
        metavar='WORKING_DIR',
        nargs='?',
        default=os.getcwd(),
    )
    new_parser.set_defaults(func=commands.new)

    bundle_parser = subparsers.add_parser(
        'bundle',
        help='Bundle a ZeroVM application',
    )
    bundle_parser.add_argument(
        'dir',
        help='ZeroVM workspace',
        metavar='WORKING_DIR',
        nargs='?',
        default=os.getcwd(),
    )
    bundle_parser.set_defaults(func=commands.bundle)
    return parser


if __name__ == "__main__":
    arg_parser = set_up_arg_parser()
    args = arg_parser.parse_args()
    args.func(args)
